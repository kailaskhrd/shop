<div class="modal-dialog">
  <div class="modal-content">
  <div class="modal-header">
    <h3>Delete role</h3>
  </div>
  <div class="modal-body">
  <ul class="errors"></ul>
  Are you sure you wish to delete <b><%= @role.name %></b>?
  </div>
  <div class="modal-footer">
    <%= link_to "Yes, Delete This role", role_path(@role), method: :delete, remote: true, class: "btn btn-danger" %>
    <%= link_to "No, Please Don't", "#", class: "btn btn-default", data: { dismiss: "modal" } %>
  </div>
  </div>
</div>